\"] = {\n","        \"name\": name,\n","        \"age\": age\n","    }\n","\n","# 1) Вывод всех имен пользователей\n","print(\"Все имена пользователей:\")\n","for id_, user_data in data_dict.items():\n","    print(user_data[\"name\"])\n","\n","print()\n","\n","# 2) Вычисление среднего возраста\n","total_age = 0\n","for id_, user_data in data_dict.items():\n","    total_age += user_data[\"age\"]\n","\n","average_age = total_age / len(data_dict)\n","print(f\"Средний возраст: {int(average_age)}\")"],"metadata":{"id":"01cpmMJb2g9p","colab":{"base_uri":"https://localhost:8080/"},"executionInfo":{"status":"ok","timestamp":1742297778732,"user_tz":-180,"elapsed":91,"user":{"displayName":"летучая мыш нет","userId":"15606522630716566801"}},"outputId":"03059e86-ab63-4830-853a-17deeefad1e1"},"execution_count":17,"outputs":[{"output_type":"stream","name":"stdout","text":["Все имена пользователей:\n","Alice\n","Bob\n","Kate\n","\n","Средний возраст: 38\n"]}]}]}